- products_list.each_slice(4) do |products|
    .row.row-products
        - products.each do |product|
            .col-product.col-md-3
                .card
                    .card-img-top.text-center= image_tag(product.image.url, size: "150")
                    .card-body
                        .card-title.text-wrap= product.name
                        %p.card-text.text-wrap= product.description
                        %p.price= "R$ #{product.price}"
